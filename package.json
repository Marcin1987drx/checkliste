{
  "name": "checklist-offline-app",
  "version": "1.0.0",
  "description": "100% offline web application for creating, editing and filling checklists with PDF reports",
  "main": "electron.js",
  "scripts": {
    "build": "tsc && rollup -c",
    "watch": "tsc --watch",
    "dev": "tsc && rollup -c && npx http-server -c-1 -p 8080",
    "electron": "electron .",
    "electron-build": "electron-builder --win --x64",
    "package": "npm run build && npm run electron-build"
  },
  "build": {
    "appId": "com.checklist.app",
    "productName": "Checklist Manager",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron.js",
      "index.html",
      "styles.css",
      "dist/**/*",
      "lib/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "icon.png"
    }
  },
  "keywords": [
    "checklist",
    "offline",
    "pdf",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "http-server": "^14.1.1",
    "rollup": "^4.9.6",
    "tslib": "^2.8.1",
    "typescript": "^5.3.3"
  }
}
